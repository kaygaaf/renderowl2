{
  "name": "@renderowl/api",
  "version": "0.1.0",
  "description": "Renderowl Platform API - Projects, Assets, Renders, Automations",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./schemas": {
      "import": "./dist/schemas.js",
      "types": "./dist/schemas.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch server.ts",
    "dev:enhanced": "tsx watch server-enhanced.ts",
    "start": "node dist/server.js",
    "start:enhanced": "node dist/server-enhanced.js",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "tsc --noEmit",
    "format": "prettier --write .",
    "migrate": "node scripts/migrate.js",
    "migrate:status": "node scripts/migrate.js --status",
    "db:cleanup": "node scripts/db-maintenance.js cleanup",
    "db:stats": "node scripts/db-maintenance.js stats",
    "db:optimize": "node scripts/db-maintenance.js optimize",
    "db:integrity": "node scripts/db-maintenance.js integrity",
    "load-test": "node scripts/load-test.js",
    "load-test:health": "node scripts/load-test.js --endpoint /health --duration 60 --concurrency 50"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.2",
    "@fastify/helmet": "^13.0.2",
    "@fastify/jwt": "^9.0.3",
    "@fastify/websocket": "^11.0.2",
    "better-sqlite3": "^12.0.0",
    "fastify": "^5.2.1",
    "stripe": "^20.3.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.13.5",
    "prettier": "^3.5.2",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3",
    "vitest": "^3.0.7"
  },
  "engines": {
    "node": ">=20"
  }
}
