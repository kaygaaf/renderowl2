# Staging Environment Variables
# Copy to Coolify environment settings

# Application
ENVIRONMENT=staging

# Database
DATABASE_URL=postgresql://user:password@postgres:5432/renderowl_staging?sslmode=require

# Redis
REDIS_URL=redis://redis:6379

# Object Storage
S3_ENDPOINT=https://<account-id>.r2.cloudflarestorage.com
S3_ACCESS_KEY=your-r2-access-key
S3_SECRET_KEY=your-r2-secret-key
S3_BUCKET_UPLOADS=renderowl-staging-uploads
S3_BUCKET_EXPORTS=renderowl-staging-exports

# Authentication
JWT_SECRET=staging-jwt-secret-key

# External APIs (use test keys for staging)
OPENAI_API_KEY=sk-your-openai-key
STRIPE_SECRET_KEY=sk_test_your-stripe-test-key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-test-key

# Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# URLs
NEXT_PUBLIC_API_URL=https://api-staging.renderowl.app
NEXT_PUBLIC_APP_URL=https://staging.renderowl.app

# Worker Settings
CONCURRENT_JOBS=1
