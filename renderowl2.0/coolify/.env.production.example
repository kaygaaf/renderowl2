# Production Environment Variables
# Copy to Coolify environment settings

# Application
ENVIRONMENT=production

# Database
DATABASE_URL=postgresql://user:password@postgres:5432/renderowl_prod?sslmode=require

# Redis
REDIS_URL=redis://redis:6379

# Object Storage (Cloudflare R2 or AWS S3)
S3_ENDPOINT=https://<account-id>.r2.cloudflarestorage.com
S3_ACCESS_KEY=your-r2-access-key
S3_SECRET_KEY=your-r2-secret-key
S3_BUCKET_UPLOADS=renderowl-uploads
S3_BUCKET_EXPORTS=renderowl-exports

# Authentication
JWT_SECRET=your-super-secret-jwt-key-min-32-chars

# External APIs
OPENAI_API_KEY=sk-your-openai-key
STRIPE_SECRET_KEY=sk_live_your-stripe-key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key

# Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# URLs
NEXT_PUBLIC_API_URL=https://api.renderowl.app
NEXT_PUBLIC_APP_URL=https://renderowl.app

# Worker Settings
CONCURRENT_JOBS=2
