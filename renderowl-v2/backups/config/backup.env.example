# ============================================================================
# Renderowl 2.0 - Backup Environment Configuration
# ============================================================================
# Copy this file to backup.env and fill in your actual values
# DO NOT commit backup.env to version control!
# ============================================================================

# ============================================================================
# Database Configuration
# ============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=renderowl
DB_USER=backup_user
DB_PASSWORD=your_secure_password_here

# ============================================================================
# Cloudflare R2 Configuration
# ============================================================================
# Primary Region (US/EU depending on your setup)
R2_ACCESS_KEY_ID=your_r2_access_key
R2_SECRET_ACCESS_KEY=your_r2_secret_key
R2_BUCKET_PRIMARY=renderowl-backups-primary
R2_ENDPOINT_PRIMARY=https://<account-id>.r2.cloudflarestorage.com

# Secondary Region (EU/US for redundancy)
R2_BUCKET_SECONDARY=renderowl-backups-secondary
R2_ENDPOINT_SECONDARY=https://<account-id>.eu.r2.cloudflarestorage.com

# ============================================================================
# Encryption Configuration
# ============================================================================
GPG_RECIPIENT=backup@renderowl.app
# GPG key fingerprint (optional but recommended)
GPG_FINGERPRINT=YOUR_GPG_KEY_FINGERPRINT

# ============================================================================
# Retention Policy
# ============================================================================
RETENTION_DAILY=7
RETENTION_WEEKLY=4
RETENTION_MONTHLY=12

# ============================================================================
# Notification Settings (optional)
# ============================================================================
# Slack webhook for alerts
SLACK_WEBHOOK_URL=

# Email for alerts
ALERT_EMAIL=ops@renderowl.app

# PagerDuty integration key (for critical failures)
PAGERDUTY_KEY=

# ============================================================================
# Performance Tuning
# ============================================================================
# Number of parallel workers for pg_dump/pg_restore
BACKUP_PARALLEL_WORKERS=4

# Compression level (1-9, higher = smaller but slower)
COMPRESSION_LEVEL=6

# ============================================================================
# Recovery Time Objectives
# ============================================================================
RTO_HOURS=4
RPO_HOURS=1
